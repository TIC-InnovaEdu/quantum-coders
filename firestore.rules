rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de usuarios
    match /users/{userId} {
      // Solo el propio usuario puede leer o escribir sus datos de perfil
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para la colección de puntajes (Leaderboard)
    match /scores/{scoreId} {
      // Cualquiera puede leer los puntajes para ver el Leaderboard
      allow read: if true;
      // Solo usuarios autenticados pueden registrar nuevos puntajes
      allow create: if request.auth != null;
      // No se permite modificar o borrar puntajes una vez registrados
      allow update, delete: if false;
    }

    // Regla por defecto para otras colecciones (como testCollection)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
